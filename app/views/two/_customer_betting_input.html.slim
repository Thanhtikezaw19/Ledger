.field.mt-2
  = f.text_field :name, class: 'name-field'
  = f.text_field :comission, class: 'comission-field'
  = f.text_field :odds, class: 'odds-field'
  / = button_tag 'Log', class: 'btn'
.num-input-field.mt-2
  = f.text_field :twod_number, class: 'twod-num-field', id: "twodNumber"
  = f.text_field :twod_price, class: 'twod-price-field', id: "twodPrice"
.bet-field.mt-2
  table.tbl
    thead
      tr
        td #
        td Bet
        td Amount
    tbody id="tableBody"


